# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET /					controllers.Website.index(lang = "en")
GET	/:lang/			    controllers.Website.index(lang:String)

GET /charts/$chartType<\w+>.html	controllers.Website.getChartType(chartType)

GET /test				controllers.Website.test()


GET 	/bubblechart.html	    controllers.Website.histo()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET		/charts/*file				controllers.Assets.at(path="/app/views/charts", file)